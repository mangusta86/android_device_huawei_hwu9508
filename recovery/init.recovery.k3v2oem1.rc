on init
    mkdir /modem
    mkdir /modem/modem_image
    mkdir /modem/nvm1
    mkdir /modem/nvm2
    mkdir /cust
    mkdir /reserved2

    chown system system /dev/cpuctl
    chown system system /dev/cpuctl/tasks

    write /sys/module/block2mtd/parameters/block2mtd /dev/block/mmcblk0p3

# change nve device visit permission
    wait /dev/nve0
    chmod 0777 /dev/nve0


on fs
    chmod 0660 /sys/devices/virtual/usbswitch/usbsw/swstate
    chown system system /sys/devices/virtual/usbswitch/usbsw/swstate

#bq2416x_charger
     chmod 0660 /sys/bus/i2c/devices/1-006b/enable_charger
     chown system system /sys/bus/i2c/devices/1-006b/enable_charger


on post-fs-data
#    chown system system sys/class/android_usb/f_mass_storage/lun/file
    chmod 0777 sys/class/android_usb/f_mass_storage/lun/file
#    chown system system	/sys/class/android_usb/f_mass_storage/luns
    chmod 0777 /sys/class/android_usb/f_mass_storage/luns


on boot
    write /sys/devices/system/cpu/cpu1/online 0
    write /sys/devices/platform/ipps-v2.0/mcu "I 64"
    write /sys/devices/platform/ipps-v2.0/mcu "I 112"
    write /sys/devices/platform/ipps-v2.0/mcu "I 17"
    write /sys/devices/platform/ipps-v2.0/mcu "I 49"
	
    setprop sys.usb.config mass_storage,adb

on property:sys.usb.config=mass_storage,adb
    write /sys/class/android_usb/android0/enable 0
    write /sys/class/android_usb/android0/idVendor 12d1
    write /sys/class/android_usb/android0/idProduct 1038
    write /sys/class/android_usb/android0/iSerial $ro.serialno
    write /sys/class/android_usb/android0/functions $sys.usb.config
    write /sys/class/android_usb/android0/enable 1
    start adbd
    setprop sys.usb.state $sys.usb.config
